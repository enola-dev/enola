schema Files
iri https://enola.dev/files

class Node
  iri_template file://{host}/{parent}/{name}?filesystem={filesystem}
  ids
    host: net:Hostname
    filesystem: Filesystem
    parent: Directory
    name: String
  properties
    createdAt: Instant
    modifiedAt: Instant
    deletedAt: Instant

