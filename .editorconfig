root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[*.md]
indent_size = unset
# See, and must match, the .markdownlint.yaml MD013: line_length
max_line_length = unset
# Trimming trailing whitespace could theoretically break MD which uses
# them for <br>, but we don't do that in this project, so no need to:
# trim_trailing_whitespace = false

[*.proto]
indent_size = 2
tab_width = 2

[*.textproto]
indent_size = unset
tab_width = unset

[*.ts]
indent_size = 2
quote_type = single

[*.html]
max_line_length = unset

[enola]
# The ./enola file is a Bash script (without *.bash extension)
indent_size = 2
tab_width = 2

[*.bash]
indent_size = 2
tab_width = 2

[*.json]
indent_size = 2

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[LICENSE]
indent_size = unset

[LICENSE-header.txt]
# https://github.com/Lucas-C/pre-commit-hooks/issues/70
insert_final_newline = false

# Generated Code is ignored
# Keep in sync with .prettierignore
[maven_install.json]
generated_code = true
indent_size = unset
max_line_length = unset

[test-random-binary]
insert_final_newline = false

[script.output]
indent_size = unset
max_line_length = unset

[mkdocs.yaml]
max_line_length = unset

[WORKSPACE.bazel]
max_line_length = unset

[package-lock.json]
max_line_length = unset

# Note that https://github.com/editorconfig-checker/editorconfig-checker
# which https://github.com/editorconfig-checker/editorconfig-checker.python
# uses does not understand e.g. [{*.yaml,*.yml}] but only single ones.
