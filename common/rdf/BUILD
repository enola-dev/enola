        "@maven//:org_eclipse_rdf4j_rdf4j_rio_turtle",
    ],
)

[java_test(
    name = name[:-len(".java")],
    size = "small",
    srcs = glob(["src/test/java/**/*.java"]),
    resources = glob(["src/test/resources/**/*"]),
    runtime_deps = [
        "@maven//:org_slf4j_slf4j_simple",
    ],
    deps = [
        ":rdf",
        "//common/common",
        "//common/protobuf",
